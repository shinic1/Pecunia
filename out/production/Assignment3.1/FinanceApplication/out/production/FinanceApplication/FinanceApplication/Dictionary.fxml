<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:id="grid" alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml" fx:controller="FinanceApplication.DictionaryController">
    <TextField fx:id="termField" promptText="Enter a financial term" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <Button text="Search" onAction="#searchTerm" GridPane.columnIndex="1" GridPane.rowIndex="0" />
    <Label fx:id="definitionLabel" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2" />
</GridPane>
