<GridPane fx:id="grid" alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml" fx:controller="FinanceApplication.DashboardController">
    <Label text="Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" />
    
    <Label text="Total Income:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <Label fx:id="totalIncomeLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    
    <Label text="Total Expenses:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <Label fx:id="totalExpensesLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    
    <Label text="Net Balance:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <Label fx:id="netBalanceLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" />
</GridPane>
