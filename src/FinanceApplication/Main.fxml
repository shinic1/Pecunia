<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="FinanceApplication.MainController" hgap="20" vgap="20" alignment="center" style="-fx-padding: 50; -fx-pref-width: 600px; -fx-pref-height: 400px; -fx-background-color: #121212;">

    <!-- Application Title -->
    <Label text="Finance Application" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #BB86FC;" GridPane.halignment="center"/>

    <!-- Income Input -->
    <Label text="Income:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-size: 16px; -fx-text-fill: #FFFFFF;"/>
    <TextField fx:id="incomeField" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-font-size: 16px; -fx-pref-width: 200px; -fx-background-color: #1E1E1E; -fx-text-fill: #FFFFFF; -fx-border-color: #BB86FC;"/>

    <!-- Expense Input -->
    <Label text="Expenses:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-size: 16px; -fx-text-fill: #FFFFFF;"/>
    <TextField fx:id="expenseField" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-font-size: 16px; -fx-pref-width: 200px; -fx-background-color: #1E1E1E; -fx-text-fill: #FFFFFF; -fx-border-color: #BB86FC;"/>

    <!-- Remaining Budget Display -->
    <Label text="Remaining Budget:" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-font-size: 16px; -fx-text-fill: #FFFFFF;"/>
    <Label fx:id="resultLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="3" style="-fx-font-size: 16px; -fx-text-fill: #03DAC6;"/>

    <!-- Calculate and Clear Buttons -->
    <Button text="Calculate" onAction="#handleCalculateBudget" GridPane.columnIndex="0" GridPane.rowIndex="4" style="-fx-font-size: 16px; -fx-pref-width: 100px; -fx-pref-height: 30px; -fx-background-color: #03DAC6; -fx-text-fill: #121212; -fx-font-weight: bold;"/>
    <Button text="Clear" onAction="#handleClearFields" GridPane.columnIndex="1" GridPane.rowIndex="4" style="-fx-font-size: 16px; -fx-pref-width: 100px; -fx-pref-height: 30px; -fx-background-color: #CF6679; -fx-text-fill: #FFFFFF; -fx-font-weight: bold;"/>

    <!-- Navigation Buttons -->
    <Button text="Budget" onAction="#goToBudget" GridPane.columnIndex="0" GridPane.rowIndex="5" style="-fx-font-size: 16px; -fx-pref-width: 100px; -fx-pref-height: 30px; -fx-background-color: #333333; -fx-text-fill: #FFFFFF;"/>
    <Button text="Income" onAction="#goToIncome" GridPane.columnIndex="1" GridPane.rowIndex="5" style="-fx-font-size: 16px; -fx-pref-width: 100px; -fx-pref-height: 30px; -fx-background-color: #333333; -fx-text-fill: #FFFFFF;"/>
    <Button text="Expenses" onAction="#goToExpense" GridPane.columnIndex="0" GridPane.rowIndex="6" style="-fx-font-size: 16px; -fx-pref-width: 100px; -fx-pref-height: 30px; -fx-background-color: #333333; -fx-text-fill: #FFFFFF;"/>
    <Button text="Dictionary" onAction="#goToDictionary" GridPane.columnIndex="1" GridPane.rowIndex="6" style="-fx-font-size: 16px; -fx-pref-width: 100px; -fx-pref-height: 30px; -fx-background-color: #333333; -fx-text-fill: #FFFFFF;"/>
    <Button text="Dashboard" onAction="#goToDashboard" GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.columnSpan="2" style="-fx-font-size: 16px; -fx-pref-width: 120px; -fx-pref-height: 30px; -fx-background-color: #BB86FC; -fx-text-fill: #121212; -fx-font-weight: bold;" GridPane.halignment="center"/>

    <!-- Settings Button -->
    <Button text="Settings" onAction="#goToSettings" GridPane.columnIndex="1" GridPane.rowIndex="8" GridPane.columnSpan="2" style="-fx-font-size: 16px; -fx-pref-width: 120px; -fx-pref-height: 30px; -fx-background-color: #BB86FC; -fx-text-fill: #121212; -fx-font-weight: bold;" GridPane.halignment="center"/>

</GridPane>
